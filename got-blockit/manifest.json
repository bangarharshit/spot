{
  "manifest_version": 2,

  "name": "Spot: Spoiler Blocker",
  "short_name": "Spot",
  "description": "Spoiler blocker for Game of Thrones and your other favourite movies on Facebook, Twitter, Reddit, and Google News feeds.",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html",
    "default_title": "Game of Spoilers"
  },

  "icons": {
    "16":  "icon16.png",
    "19":  "icon16.png",
    "48":  "icon48.png",
    "128": "icon128.png"
  },

  "background": {
    "page": "background.html"
  },

  "content_scripts": [
    {
      "matches": [
        "*://news.google.co.in/*",
        "*://news.google.co.uk/*",
        "*://news.google.com/*",
        "*://twitter.com/*",
        "*://www.buzzfeed.com/*",
        "*://www.facebook.com/*",
        "*://www.reddit.com/*",
        "*://www.tumblr.com/*",
        "*://www.youtube.com/*",
        "*://www.quora.com/*",
        "*://www.instagram.com/*",
        "*://www.linkedin.com/*"
      ],
      "js": ["jquery-3.1.0.min.js", "content.js", "helper.js"],
      "css": ["content.css"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent"
  ],
  "content_security_policy":"script-src 'self' https://ssl.google-analytics.com https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"

}
