{
  "manifest_version": 2,

  "name": "LinkedIn keyword blocker",
  "description": "Only allow messages with a custom text in it",
  "version": "1.0.0",

  "permissions": ["activeTab","declarativeContent", "storage"],
  "icons": {
    "16":  "icons8-linkedin-16.png",
    "48":  "icons8-linkedin-48.png",
    "128": "icons8-linkedin-128.png"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/messaging/*"
      ],
      "js": ["jquery-3.1.0.min.js", "content.js"]
    }
  ],
  "page_action": {
    "default_icon": "icons8-linkedin-128.png",
    "default_popup": "popup.html",
    "default_title": "LinkedIn keyword blocker"
  }
}
